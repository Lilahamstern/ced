@model Web.Models.HomeViewModel;
@{
    ViewData["Title"] = "Project List";
}

    <form asp-controller="Home" asp-action="Index" method="get">
        <p>
            <input type="text" asp-for="Search" />
            <button class="btn btn-success" type="submit" >Search</button>
        </p>
    </form>

<table class="table table-dark">
    <thead>
        <tr>
            <th>
                Versioner
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Projects[0].OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Projects[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Projects[0].Manager)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Projects[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Projects[0].Sector)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Projects[0].Co)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Projects[0].ProjectId)
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Projects.Count() <= 0) { 

            <tr>
                <td colspan="9">
                    <div class="alert alert-warning mx-auto">No projects found</div>
                </td>
            </tr>

        }
        @foreach (var item in Model.Projects)
        {
            <tr>
                <td>
                    0
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manager)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sector)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Co)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectId)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ProjectId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
