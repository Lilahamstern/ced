@model Web.Models.HomeViewModel;
@{
    ViewData["Title"] = "Project List";
}

    <form asp-controller="Home" asp-action="Index" method="get">
            <div class="input-group col-8 mb-4 mx-auto">
                <input type="text" asp-for="Search" class="form-control" aria-label="Search" placeholder="Search">
                <div class="mx-3">
                    <button type="submit" class="btn btn-success">Search</button>
                </div>
            </div>
    </form>

<table id="projects" class="table table-dark stylish-color-dark table-hover" cellpadding="0" width="100%">
    <thead>
        <tr>
            <th>
                Versioner
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Projects[0].OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Projects[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Projects[0].Manager)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Projects[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Projects[0].Sector)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Projects[0].Co)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Projects[0].ProjectId)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Projects.Count() <= 0) { 

            <tr>
                <td colspan="8">
                    <div class="alert alert-warning mx-auto text-center">No projects found</div>
                </td>
            </tr>

        }
        @foreach (var item in Model.Projects)
        {
            <tr>
                <td>
                    0
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manager)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sector)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Co)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectId)
                </td>
            </tr>
        }
    </tbody>
</table>
