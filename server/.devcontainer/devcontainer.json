{
    "name": "Go-Server",
    "dockerComposeFile": [
        "../../docker-compose.server.yml"
    ],
    "service": "server",
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "go.gopath": "/go"
    },
    "forwardPorts": [
        5000
    ],
    "remoteEnv": {
        "DB": "postgres://admin:secret@db:5432/ced?sslmode=disable"
    },
    "workspaceFolder": "/workspace/server",
    "shutdownAction": "none",
    "extensions": [
        "golang.go"
    ]
}