{
    "name": "Go-Server",
    "dockerComposeFile": [
        "../../build/dev/docker-compose.server.yml",
        "../../build/dev/docker-compose.db.yml"
    ],
    "service": "server",
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "go.gopath": "/go"
    },
    "forwardPorts": [
        5000
    ],
    "workspaceFolder": "/workspace/server",
    "shutdownAction": "none",
    "extensions": [
		"golang.go",
		"bajdzis.vscode-database"
	]
}